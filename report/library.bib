number = {7096},
pages = {960--3},
pmid = {16791190},
title = {{Broad-band optical parametric gain on a silicon photonic chip.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/16791190},
volume = {441},
year = {2006}
}
