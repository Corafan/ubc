isbn = {9781450304726},
issn = {1063-6897},
journal = {Proceeding of the 38th annual international symposium on Computer architecture - ISCA '11},
keywords = {high-radix,photonics,router,switch},
pages = {437},
title = {{The role of optics in future high radix switch design}},
url = {http://portal.acm.org/citation.cfm?doid=2000064.2000116},
